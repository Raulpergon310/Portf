---

<section id="stats" class="py-20 px-6">
	<div class="container mx-auto max-w-6xl">
		<!-- Stats Terminal -->
		<div class="border rounded-lg overflow-hidden mb-12" style="border-color: var(--border-primary);">
			<div class="border-b px-4 py-2 flex items-center gap-2" style="background-color: var(--bg-secondary); border-color: var(--border-primary);">
				<span class="text-xs" style="color: var(--text-tertiary);">$ stats --summary</span>
			</div>
			<div class="p-8" style="background-color: var(--bg-tertiary);">
				<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
					{stats.map((stat) => (
						<div class="text-center">
							<div class="text-3xl mb-2">{stat.icon}</div>
							<div class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-1">
								{stat.value}
							</div>
							<div class="text-xs" style="color: var(--text-tertiary);">
								{stat.label}
							</div>
						</div>
					))}
				</div>
			</div>
		</div>

		<!-- Tech Stack Terminal -->
		<div class="border rounded-lg overflow-hidden" style="border-color: var(--border-primary);">

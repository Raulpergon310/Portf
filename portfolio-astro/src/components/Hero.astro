<section id="inicio" class="min-h-screen flex items-center justify-center px-6 pt-20">
	<div class="container mx-auto max-w-4xl">
		<div class="terminal-window border rounded-lg overflow-hidden" style="border-color: var(--border-primary);">
			<!-- Terminal Header -->
			<div class="border-b px-4 py-2 flex items-center gap-2" style="background-color: var(--bg-secondary); border-color: var(--border-primary);">
				<div class="flex gap-2">
					<div class="w-3 h-3 rounded-full bg-[#ff5f56]"></div>
					<div class="w-3 h-3 rounded-full bg-[#ffbd2e]"></div>
					<div class="w-3 h-3 rounded-full bg-[#27c93f]"></div>
				</div>
				<span class="text-xs" style="color: var(--text-tertiary);">~/portfolio</span>
			</div>

			<!-- Terminal Content -->
			<div class="p-8 md:p-12" style="background-color: var(--bg-primary);">
				<div class="space-y-4 text-sm md:text-base">
					<div class="flex gap-2">
						<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">guest@portfolio:~$</span>
						<span style="color: var(--text-secondary);">cat intro.txt</span>
					</div>

					<div class="mt-6 space-y-3" style="color: var(--text-primary);">
						<div class="typing-line">
							<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">[INFO]</span> Inicializando portfolio...
						</div>
						<div class="typing-line">
							<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">[OK]</span> Sistema cargado correctamente
						</div>
						<div class="mt-8">
							<h1 class="text-2xl md:text-4xl font-bold mb-4">
								<span style="color: var(--text-primary);">Desarrollador Full Stack</span>
							</h1>
							<p class="mb-2" style="color: var(--text-secondary);">
								<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Especialización:</span> Mobile & Web Development
							</p>
							<p class="mb-2" style="color: var(--text-secondary);">
								<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Stack principal:</span> Flutter, Angular, Node.js
							</p>
							<p style="color: var(--text-secondary);">
								<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Estado:</span> <span class="text-[#27c93f]">● Disponible para nuevos proyectos</span>
							</p>
						</div>

						<div class="mt-8 flex flex-wrap gap-4">
							<a
								href="#proyectos"
								class="inline-flex items-center gap-2 px-6 py-2 bg-gradient-to-r from-cyan-400 to-blue-500 text-white hover:from-cyan-500 hover:to-blue-600 transition-all"
							>
								<span class="text-xs">$</span> ver proyectos
							</a>
							<a
								href="#contacto"
								class="inline-flex items-center gap-2 px-6 py-2 border hover:border-cyan-400 hover:text-cyan-400 transition-all"
								style="border-color: var(--border-primary); color: var(--text-secondary);"
							>
								<span class="text-xs">$</span> contactar
							</a>
						</div>

						<div class="mt-8 flex gap-6 text-sm" style="color: var(--text-tertiary);">
							<a href="https://github.com/tuusuario" target="_blank" class="hover:text-cyan-400 transition-colors flex items-center gap-2">
								<span>></span> github
							</a>
							<a href="https://linkedin.com/in/tuusuario" target="_blank" class="hover:text-cyan-400 transition-colors flex items-center gap-2">
								<span>></span> linkedin
							</a>
							<a href="mailto:tu@email.com" class="hover:text-cyan-400 transition-colors flex items-center gap-2">
								<span>></span> email
							</a>
						</div>

						<div class="mt-6 flex gap-2 items-center">
							<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">guest@portfolio:~$</span>
							<span class="cursor-blink">_</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes blink {
		0%, 50% { opacity: 1; }
		51%, 100% { opacity: 0; }
	}

	.cursor-blink {
		animation: blink 1s infinite;
	}

	.typing-line {
		opacity: 0;
		animation: fade-in 0.5s ease-out forwards;
	}

	.typing-line:nth-child(1) {
		animation-delay: 0.1s;
	}

	.typing-line:nth-child(2) {
		animation-delay: 0.3s;
	}

	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
